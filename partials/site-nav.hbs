<nav class="site-nav">
    <div class="site-nav-left">
        {{^is "home"}}
            {{#if @blog.logo}}
                <a class="site-nav-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
            {{else}}
                <a class="site-nav-logo" href="{{@blog.url}}">{{@blog.title}}</a>
            {{/if}}
        {{/is}}
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
    </div>
    <div class="site-nav-right">
        <div class="social-links">
            {{#if @blog.facebook}}
                <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @blog.twitter}}
                <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
            {{/if}}
            <a class="social-link social-link-gh" href="https://github.com/b099l3" target="_blank" rel="noopener">{{> "icons/github"}}</a>
            <a class="social-link social-link-yt" href="https://www.youtube.com/user/b099l3" target="_blank" rel="noopener">{{> "icons/youtube"}}</a>
            <a class="social-link social-link-ut" href="https://untappd.com/user/b099l3" target="_blank" rel="noopener">{{> "icons/untappd"}}</a>
            <a class="social-link social-link-so" href="https://stackoverflow.com/users/1107580/iain-smith?tab=profile" target="_blank" rel="noopener">{{> "icons/stackoverflow"}}</a>
            <a class="social-link social-link-li" href="https://www.linkedin.com/in/iainsmithmobile" target="_blank" rel="noopener">{{> "icons/linkedin"}}</a>
        </div>
        {{#if @labs.subscribers}}
            <a class="subscribe-button" href="#subscribe">Subscribe</a>
        {{else}}
            <a class="rss-button" href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
        {{/if}}
    </div>
</nav>
